<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerEditProfile">

    <Button
        android:id="@+id/cusProfileDeleteBtn"
        android:layout_width="156dp"
        android:layout_height="71dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/button_style"
        android:text="@string/DeleteBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cusProfileSaveBtn"
        app:layout_constraintTop_toBottomOf="@+id/cusProfileChangePassword"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/TopImage"
        android:layout_width="368dp"
        android:layout_height="196dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/TopImage"
        android:src="@drawable/top_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>